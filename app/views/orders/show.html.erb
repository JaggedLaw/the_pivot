<div class="order-hero-unit">
  <div class="container text-center hero-container">
    <h1>sweet nectar of the coffee gods.</h1>
  </div>
</div><br>
<div class="container">
  <div class="row">
    <div class="col-sm-8 col-sm-offset-2">
      <div class="container past-order-review">
        <h3 class="order-id lending">Order <%= @order.id %></h3>
        <h3 class="order-date"><%= @order.date %></h3>
      </div>
    </div>
  </div><br>
  <div class="row">
    <div class="col-sm-8 col-sm-offset-2">
      <div class="table-responsive">
        <table class="table table-hover table-condensed table-projects">
          <thead>
            <tr>
              <th></th>
              <th class="text-center">project</th>
              <th class="text-center">goal</th>
              <th class="text-center">quantity</th>
              <th class="text-center">subtotal</th>
            </tr>
          </thead>
          <% @order.loans.each do |loan| %>
            <tr>
              <td><%= image_tag(loan.project.image.url(:small), class: "project_image img-responsive") %></td>
                <td><h4><%= loan.project.name %></h4></td>
                <td><h4><%= loan.project.display_goal %></h4></td>
                <td><h4><%= loan.quantity %></h4></td>
                <td><h4><%= loan.display_total %></h4></td>
            </tr>
          <% end %>
            <tfoot>
              <th></th>
              <th></th>
              <th></th>
              <th class="order-total">Total:</th>
              <th class="order-total"><%= @order.display_total %></th>
            </tfoot>
        </table>
      </div>
    </div>
  </div>
</div>
