<% @projects.each do |project| %>
  <% if !project.has_active_loans? %>
    <div class="table-responsive">
      <table class="table table-hover table-condensed table-projects">
      <tr id="<%= project.id %>-project" class="project-row">
        <td> <%= link_to project.name, project_path(project.slug) %> </td>
        <td></td>
        <td></td>
        <td>All paid!</td>
      </tr>
        <tr>
          <th class="text-center">loan</th>
          <th class="text-center">status</th>
          <th class="text-center">date</th>
          <th></th>
        </tr>
      <% num = 1 %>
      <% project.loans.each do |loan| %>
        <tr id="<%= loan.id %>-loan" class="loan-row">
          <td><%= num %></td>
          <td><%= loan.status %></td>
          <td class="loan-value" ><%= loan.date %></td>
          <td></td>
        </tr>
        <% num += 1 %>
      <% end %>
      </table>
      </div>
      <br>
      <% else %>
    <% end %>
  <% end %>
