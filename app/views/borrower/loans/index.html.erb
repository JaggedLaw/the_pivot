<div class="order-hero-unit loan-index-hero-unit">
  <div class="container text-center hero-container">
    <h1>all those loans</h1>
  </div>
</div><br>
<div class="row">
  <div class="col-sm-10 col-sm-offset-1">
    <div class="input-group">
      <span class="input-group-btn">
        <button class="btn btn-default light" type="button">Projects</button>
      </span>
      <input id="project-search" type="text" class="form-control" placeholder="Search by project name">
    </div>
  </div>
<br>
<br>
<br>
<div id="loans" class="container">
  <div class="row">
    <div class="col-xs-10 col-xs-offset-1">
      <% if params[:status] == "completed" %>
        <%= render partial: "completed_loans" %>
      <% else %>
        <%= render partial: "active_loans" %>
      <% end %>
    </div>
  </div>
</div>
