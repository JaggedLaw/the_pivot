<div id="loan" class="container">
  <div class="loan-header">
    <h2>repayment toward project <%= @project.name %></h2>
    <br>
  </div>
  <div class="row loans-rows">
    <div class="col-sm-4">
      <div class="loan-images">
          <%= image_tag(@project.image.url(:index), class: "img-responsive") %>
      </div>
    </div>
    <div class="col-sm-5">
      <div class="cart text-center">
        <h3> Remaining amount: <%= @project.display_debt %> </h3>
        <h3 class="text-center">amount to pay</h3>
        <div class="form-group text-center form-div">
          <%= render partial: "repayment_form" %>
        </div>
      </div>
    </div>
  </div>
  <br><br>
