<div class="general-hero-unit category-hero-unit">
  <div class="container text-center hero-container">
    <a href="/categories/<%= @category.slug %>">
      <h1><%= @category.name %></h1>
    </a>
  </div>
</div>
<div class="container-fluid">
  <div class="row">
    <% @category.active_projects.each do |project| %>
    <div class="col-xs-12 col-sm-6 col-md-4 project-div">
      <div class="row sm-project-row project-row">
        <div class="col-xs-12" id="<%= project.id %>-index">
          <%= link_to image_tag(project.image.url(:show), class: "img-responsive project-image"), project_path(project.slug), id: "#{project.id}-project-image" %>
          <div class="sm-project-info">
            <h4><%= link_to project.name, project_path(project.slug), id: "#{project.id}-project" %></h4>
            <p><%= project.country.name %> | <%= project.category.name %></p>
            <p>Amount Needed: <%= project.display_goal %></p>
          </div>
        </div>
        <div class="project-info">
          <h4><%= link_to project.name, project_path(project.slug), id: "#{project.id}-project" %></h4>
          <p><%= project.description %></p>
        </div>
      </div>
      <div class="row xs-project-row project-row">
        <div class="col-xs-6">
          <%= link_to image_tag(project.image.url(:show), class: "img-responsive"), project_path(project.slug), id: "#{project.id}-project-image" %>
          <div class="sm-project-info">
            <h4><%= link_to project.name, project_path(project.slug), id: "#{project.id}-project" %></h4>
            <p><%= project.description %></p>
          </div>
        </div>
        <div class="project-info">
          <h4><%= link_to project.name, project_path(project.slug), id: "#{project.id}-project" %></h4>
          <p><%= project.description %></p>
        </div>
      </div>
    </div>
    <% end %>
  </div>
  <div class="category-name">
    <h2>more stuff you may like</h2>
    <div class="aligncenter divider">-</div>
  </div>
  <%= render partial: "shared/featured_projects" %>
</div>
<%= render partial: "shared/mailing_list" %>
<%= render partial: "shared/footer" %>
