<div id="category-products" class="row products">
  <div class="row">
    <h2><%= @category.name %></h2>
  </div>
  <div class="row products-rows">
    <% @category.products.each do |product| %>
      <div class="col-xs-6 col-sm-4 product-div">
        <div class="product-img">
          <%= link_to image_tag(product.image.url(:index), class: "product-images img-rounded img-responsive"), product_path(product.id), id: "#{product.id}-product-image" %>
        </div>
        <p class="product-name"><%= link_to product.name, product_path(product.id), id: "#{product.id}-product" %></p>
        <p class="product-desc"><%= product.description %></p>
      </div>
    <% end %>
  </div>
</div>
