<div id="product" class="container">
  <div class="product-header">
    <h2>Shopping Cart</h2>
  </div>
  <div class="row cart-product">
    <div class="col-xs-7">
      <% @products.each do |product| %>
        <div id="<%= product.first.id %>-product">
          <div class="row">
            <div class="col-xs-10 col-sm-6">
              <div class="cart-image">
                <%= image_tag(product.first.image_url, class: "product_image img-responsive img-rounded") %>
              </div>
            </div>
            <div class="col-xs-10 col-sm-6">
              <div class="row">
                <div class="product-info container">
                  <p class="product-title"><%= product.first.name %></p>

                  <p>$<%= product.first.display_price(product.first.price) %></p>

                  <h5><%= link_to "remove from cart", cart_path(product.first.id), method: :delete %></h5>
                </div>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
    <div class="col-xs-10 col-sm-5">
      <div class="cart text-center">
        <p>Order Total</p>
        <h1>$<%= cart_total(@products) %></h1>
      </div>
    </div>
  </div>
</div>
