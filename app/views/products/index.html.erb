<div class="jumbotron">
  <p>
  <% @categories.each do |category| %>
    <%= link_to category.name, "/#{category.name.downcase}" %>
  <% end %>
  </p>
</div>
<div id="products" class="row products">
  <% @categories.each do |category| %>
    <h2><%= category.name %></h2>
    <% category.products.each do |product| %>
      <div class="col-xs-6 col-sm-2", >
        <%= link_to image_tag(product.image_url, class: "product_images img-rounded", width: "250", height: "200"), product_path(product.id), id: "#{product.id}-product-image" %>
        <h3><%= link_to product.name, product_path(product.id), id: "#{product.id}-product" %></h3>
        <p><%= product.description %></p>
      </div>
    <% end %>
  <% end %>
</div>
