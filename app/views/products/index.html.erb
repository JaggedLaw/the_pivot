<div id="products" class="row products">
  <% @categories.each do |category| %>
  <div class="row">
    <h2><%= category.name %></h2>
  </div>
  <div class="row products-rows">
    <% category.active_products.each do |product| %>
      <div class="col-xs-6 col-sm-4 product-div">
        <div class="product-img">
          <%= link_to image_tag(product.image.url(:index), class: "product-images img-rounded img-responsive"), product_path(product.id), id: "#{product.id}-product-image" %>
        </div>
        <h4><%= link_to product.name, product_path(product.id), id: "#{product.id}-product" %></h4>
        <p><%= product.description %></p>
      </div>
    <% end %>
  </div>
  <% end %>
</div>
