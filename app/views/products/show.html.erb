<div id="product" class="container">
  <div class="product-header">
    <h2><%= @product.name %></h2>
    <p><%= @product.description %></p>
  </div>
  <div class="row products-rows">
    <div class="col-sm-7">
      <div class="product-images">
          <%= image_tag(@product.image.url(:show), class: "img-responsive") %>
      </div>
    </div>
    <div class="col-sm-5">
      <div class="cart text-center">
        <h3><%= @product.name %></h3>
        <h2 class="text-center"><%= @product.display_price %></h2><br>
        <%= form_tag(cart_products_path(product_id: @product.id), method: "post") do %>
          <select class="form-control" name="quantity">
            <%= render partial: "shared/options"  %>
          </select><br>
          <%= submit_tag "Add to cart", class:"form-control btn btn-little-owl"%>
        <% end %>
      </div>
    </div>
  </div>
  <br><br>
  <div class="category-name">
    <h2>more stuff you may like</h2>
    <div class="aligncenter divider">-</div>
  </div>
  <%= render partial: "shared/featured_products" %>
</div>
