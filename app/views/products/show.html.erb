<div id="product">
  <div class="col-xs-6 col-sm-2", >
    <%= link_to image_tag(@product.image_url, class: "product_images", width: "250", height: "200"), product_path(@product.id), id: "#{@product.id}-product-image" %>
    <h3><%= link_to @product.name, product_path(@product.id), id: "#{@product.id}-product" %></h3>
    <p><%= @product.description %></p>
  </div>
</div>
