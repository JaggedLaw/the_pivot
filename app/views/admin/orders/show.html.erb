<div class="jumbotron">
  <div class="container">
    <div class="row">
      <div class="col-xs-6" id="order-information">
        <%= @order.id %>
        <%= @order.date %>
        <%= @order.product_quantity %>
        <%= @order.total %>
        <%= form_for [:admin, @order], url: admin_order_path(@order.id) do |f| %>
          <%= f.label :comment, class:"sr-only"  %>
          <%= f.text_field :comment, placeholder: "comment", class: "update-form"%><br>
          <%= f.select(:status, options_for_select(%w(paid completed cancelled), @order.status), {prompt: @order.status}, {class:"update-form", required:true}) %><br>
          <%= f.submit "update order", class:"btn btn-checkout btn-s"%><br>
        <% end %>
      </div>
      <div class="col-xs-6" id="customer-information">
        <%= @order.name %>
        <%= @order.street %>
        <%= @order.unit %>
        <%= @order.city %>
        <%= @order.state %>
        <%= @order.zip %>
      </div>
    </div>
  </div>
</div>
<div class="container">

<div class="table-responsive">
  <table class="table table-hover table-condensed">
    <thead>
      <tr>
        <th></th>
        <th>name</th>
        <th>price</th>
        <th>quantity</th>
        <th>total</th>
      </tr>
    </thead>
    <% @order.order_products.each do |order_product| %>
      <tr id="<%= order_product.id %>-order-product">
        <td><%= image_tag(order_product.product.image.url(:small), class:"product-image img-rounded") %></td>
        <td> <%= order_product.product.name %> </td>
        <td> <%= order_product.product.price %> </td>
        <td> <%= order_product.quantity %> </td>
        <td> <%= order_product.total %> </td>
      </tr>
    <% end %>
  </table>
</div>

</div>
